{
  "parser"  : "babel-eslint",
  "extends" : [
    "eslint:recommended",
    "standard-react",
    "semistandard"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "max-len": [2, 120, 2]
  }
}
